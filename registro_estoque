/*-----------------1------------------*/
SELECT 
    (SELECT 
        nome_cliente
    FROM 
        clientes c 
    WHERE 
        c.id_cliente = cp.id_cliente) AS nome_cliente,
    (SELECT 
        telefone
    FROM 
        clientes c 
    WHERE 
        c.id_cliente = cp.id_cliente) AS telefone_cliente,
    (SELECT 
        nome_produto
    FROM 
        produtos p 
    WHERE p.id_produto = cp.id_produto) AS nome_produto,
    (SELECT 
        quantidade
    FROM 
        produtos p 
    WHERE p.id_produto = cp.id_produto) AS quantidade_produto 
    FROM 
        clientes_produtos cp
    WHERE
        cp.id_produto IN(
            SELECT
                p.id_produto
            FROM
                produtos p
            WHERE
                p.id_empresa IN(
                    SELECT
                        empresas.id_empresa
                    FROM
                        empresas     
                    )
        )LIMIT 3;


/*-----------------2------------------
SELECT  
    clientes.nome_cliente,
    clientes.telefone
FROM
    clientes
WHERE
    clientes.id_cliente IN(
        SELECT 
            clientes_produtos.id_cliente 
        FROM 
            clientes_produtos
        WHERE
            clientes_produtos.id_produto IN(
                SELECT
                    produtos.id_produto,
                    produtos.nome_produto,
                    produtos.quantidade
                FROM
                    produtos
                WHERE
                    produtos.id_empresa IN(
                        SELECT
                            empresas.id_empresa
                        FROM
                            empresas     
                    ) GROUP BY produtos.quantidade DESC
            )
    )*/
